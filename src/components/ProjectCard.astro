---
const { title, description, href, tags = [] } = Astro.props;
---
<a
  href={href}
  class="group block rounded-2xl border border-white/10 bg-white/5 p-6 transition hover:border-cyanBrand-500/30 hover:bg-white/7 hover:shadow-glow"
>
  <div class="flex items-start justify-between gap-4">
    <div>
      <h3 class="font-display text-lg font-semibold">{title}</h3>
      <p class="mt-2 text-sm text-white/70">{description}</p>
    </div>
    <span class="text-cyanBrand-500/80 transition group-hover:text-cyanBrand-500">â†’</span>
  </div>

  {tags.length > 0 && (
    <div class="mt-4 flex flex-wrap gap-2">
      {tags.map((t) => (
        <span class="rounded-full border border-white/10 bg-ink-950/30 px-3 py-1 text-xs text-white/70">
          {t}
        </span>
      ))}
    </div>
  )}
</a>
