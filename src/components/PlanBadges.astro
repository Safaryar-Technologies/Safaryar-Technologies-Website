---
import Container from "./Container.astro";

const plans = [
  {
    name: "Website",
    price: "$129",
    subtitle: "Design • Develop • Host",
    description:
      "A fast, modern marketing website delivered end-to-end — design, build, and hosting included.",
    bullets: [
      "Modern UI/UX + responsive design",
      "Performance + SEO basics",
      "Deployment + SSL + hosting setup",
      "1 month support & minor fixes",
    ],
    cta: { label: "Start a Website", href: "/#contact" },
    featured: false,
  },
  {
    name: "MIS",
    price: "$249",
    subtitle: "Information Systems",
    description:
      "We design information systems for corporations — clear workflows, data structure, and scalable architecture.",
    bullets: [
      "Requirements + system design",
      "User roles, flows, and data modeling",
      "Architecture + integration plan",
      "Documentation + handoff",
    ],
    cta: { label: "Discuss MIS", href: "/#contact" },
    featured: true,
    tag: "Best for teams",
  },
  {
    name: "Mobile Application",
    price: "$499",
    subtitle: "Design • Build • Launch",
    description:
      "We design, develop, and launch your mobile app on Play Store & App Store with a reliable delivery process.",
    bullets: [
      "Cross-platform or native approach",
      "App store release support",
      "Crash/analytics setup (optional)",
      "Post-launch maintenance options",
    ],
    cta: { label: "Build an App", href: "/#contact" },
    featured: false,
  },
];
---

<section id="plans" class="py-16 sm:py-20">
  <Container>
    <div class="flex flex-col gap-3 sm:flex-row sm:items-end sm:justify-between">
      <div>
        <div class="inline-flex items-center gap-2 rounded-full border border-white/10 bg-ink-950/40 px-3 py-1 text-xs text-white/70">
          <span class="h-1.5 w-1.5 rounded-full bg-cyanBrand-500"></span>
          Plans
        </div>
        <h2 class="mt-4 font-display text-3xl font-semibold tracking-tight text-white sm:text-4xl">
          Simple starter plans that scale with you
        </h2>
        <p class="mt-3 max-w-2xl text-white/70">
          Clear pricing to get started fast. Final cost can vary based on scope — we’ll confirm everything before we begin.
        </p>
      </div>

      <a
        href="/#contact"
        class="mt-3 inline-flex items-center justify-center rounded-2xl border border-white/15 bg-white/5 px-4 py-2 text-sm font-semibold text-white/90 transition hover:bg-white/10 sm:mt-0"
      >
        Get a Custom Quote →
      </a>
    </div>

    <div class="mt-10 grid gap-5 lg:grid-cols-3">
      {plans.map((p) => (
        <div
          class={[
            "group relative overflow-hidden rounded-3xl border bg-ink-950/30 p-6 shadow-sm backdrop-blur",
            p.featured
              ? "border-cyanBrand-500/30 shadow-glow"
              : "border-white/10 hover:border-white/15",
          ].join(" ")}
        >
          <div class="absolute inset-0 opacity-0 transition group-hover:opacity-100">
            <div class="absolute -top-24 left-1/2 h-48 w-[520px] -translate-x-1/2 rounded-full bg-cyanBrand-500/10 blur-3xl"></div>
          </div>

          <div class="relative">
            <div class="flex items-start justify-between gap-4">
              <div>
                <div class="flex items-center gap-2">
                  <h3 class="font-display text-xl font-semibold text-white">{p.name}</h3>
                  {p.tag && (
                    <span class="rounded-full border border-cyanBrand-500/25 bg-cyanBrand-500/10 px-2 py-0.5 text-xs font-semibold text-cyanBrand-200">
                      {p.tag}
                    </span>
                  )}
                </div>
                <p class="mt-1 text-sm text-white/65">{p.subtitle}</p>
              </div>

              <div class="text-right">
                <div class="text-xs text-white/60">Starting at</div>
                <div class="mt-1 font-display text-3xl font-semibold text-white">{p.price}</div>
              </div>
            </div>

            <p class="mt-4 text-sm leading-relaxed text-white/75">{p.description}</p>

            <ul class="mt-5 space-y-2 text-sm text-white/70">
              {p.bullets.map((b) => (
                <li class="flex gap-2">
                  <span class="mt-2 h-1.5 w-1.5 flex-none rounded-full bg-cyanBrand-500"></span>
                  <span>{b}</span>
                </li>
              ))}
            </ul>

            <div class="mt-6 flex items-center justify-between gap-4">
              <a
                href={p.cta.href}
                class={[
                  "inline-flex items-center justify-center rounded-2xl px-4 py-2 text-sm font-semibold transition",
                  p.featured
                    ? "bg-cyanBrand-500 text-ink-950 hover:brightness-110"
                    : "bg-white/10 text-white hover:bg-white/15",
                ].join(" ")}
              >
                {p.cta.label} →
              </a>

              <span class="text-xs text-white/55">Reply within 24 hours</span>
            </div>
          </div>
        </div>
      ))}
    </div>

    <p class="mt-6 text-xs text-white/55">
      Note: Prices shown are starter packages. Domain purchase (if needed) is separate. Hosting is included in the Website plan starter setup.
    </p>
  </Container>
</section>
