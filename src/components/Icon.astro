---
type Props = { name: "code" | "mobile" | "pen" | "cloud" | "wrench" | "spark" | "shield" | "bolt" };
const { name } = Astro.props as Props;

const icons: Record<string, string> = {
  code: `<path d="M9 18l-6-6 6-6M15 6l6 6-6 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>`,
  mobile: `<rect x="7" y="3" width="10" height="18" rx="2" stroke="currentColor" stroke-width="2"/><path d="M11 17h2" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>`,
  pen: `<path d="M12 20h9" stroke="currentColor" stroke-width="2" stroke-linecap="round"/><path d="M16.5 3.5a2.1 2.1 0 0 1 3 3L7 19l-4 1 1-4 12.5-12.5z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>`,
  cloud: `<path d="M7 18a4 4 0 0 1 .5-7.97A5 5 0 0 1 17 9a3.5 3.5 0 0 1 0 7H7z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>`,
  wrench: `<path d="M21 2l-2 2m-3 3l-7.5 7.5a2.1 2.1 0 0 1-3 0l-1-1a2.1 2.1 0 0 1 0-3L12 5.5A6 6 0 0 0 21 2z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/><path d="M14 7l3 3" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>`,
  spark: `<path d="M12 2l1.2 4.2L17 7.4l-3.8 1.2L12 13l-1.2-4.4L7 7.4l3.8-1.2L12 2z" fill="currentColor"/>`,
  shield: `<path d="M12 2l8 4v6c0 5-3.4 9.4-8 10-4.6-.6-8-5-8-10V6l8-4z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>`,
  bolt: `<path d="M13 2L3 14h8l-2 8 10-12h-8l2-8z" fill="currentColor"/>`,
};

const svg = icons[name];
---
<svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" aria-hidden="true" set:html={svg} />
