---
import Container from "./Container.astro";
import { site } from "../config/site";
const year = new Date().getFullYear();
---
<footer class="mt-20 border-t border-white/10">
  <Container class="py-10">
    <div class="flex flex-col gap-8 md:flex-row md:items-start md:justify-between">
      <div class="max-w-sm">
        <div class="flex items-center gap-3">
          <img src="/brand/safaryar-logo.png" alt="Safaryar" class="h-12 w-12 rounded-2xl" />
        </div>
        <p class="mt-3 text-sm text-white/70">{site.tagline}</p>
        <p class="mt-4 text-sm text-white/60">
          Email: <a class="text-cyanBrand-500 hover:underline" href={`mailto:${site.contact.email}`}>{site.contact.email}</a>
        </p>
      </div>

      <div class="grid grid-cols-2 gap-8 sm:grid-cols-3">
        <div>
          <div class="text-xs font-semibold uppercase tracking-[0.18em] text-white/70">Pages</div>
          <div class="mt-3 flex flex-col gap-2 text-sm">
            {site.nav.map((n) => (
              <a href={n.href} class="text-white/70 hover:text-white">{n.label}</a>
            ))}
          </div>
        </div>

        <div>
          <div class="text-xs font-semibold uppercase tracking-[0.18em] text-white/70">Services</div>
          <div class="mt-3 flex flex-col gap-2 text-sm">
            {site.services.slice(0, 4).map((s) => (
              <a href="/services" class="text-white/70 hover:text-white">{s.title}</a>
            ))}
          </div>
        </div>

        <div>
          <div class="text-xs font-semibold uppercase tracking-[0.18em] text-white/70">Social</div>
          <div class="mt-3 flex flex-col gap-2 text-sm">
            {site.socials.map((s) => (
              <a href={s.href} class="text-white/70 hover:text-white">{s.label}</a>
            ))}
          </div>
        </div>
      </div>
    </div>

    <div class="mt-10 flex flex-col gap-3 border-t border-white/10 pt-6 text-xs text-white/55 sm:flex-row sm:items-center sm:justify-between">
      <div>Â© {year} {site.name}. All rights reserved.</div>
      <div class="text-white/45">Built with Astro + Tailwind</div>
    </div>
  </Container>
</footer>
