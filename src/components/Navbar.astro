---
import Container from "./Container.astro";
import Button from "./Button.astro";
import { site } from "../config/site";

const path = Astro.url.pathname;
const isActive = (href: string) => (href === "/" ? path === "/" : path.startsWith(href));
---

<header class="sticky top-0 z-50 border-b border-white/8 bg-ink-900/70 backdrop-blur">
  <Container class="py-6">
    <div class="flex items-center justify-between gap-4">
      <a href="/" class="group flex items-center gap-3" aria-label="Safaryar Technologies">
        <img
          src="/brand/safaryar-logo.png"
          alt="Safaryar Technologies"
          class="h-14 w-14 sm:h-16 sm:w-16 md:h-16 md:w-16 rounded-2xl ring-1 ring-white/10 bg-ink-950/30 p-1"
        />
      </a>

      <nav class="hidden items-center gap-6 md:flex">
        {site.nav.map((item) => (
          <a
            href={item.href}
            class={`text-sm transition ${
              isActive(item.href) ? "text-cyanBrand-500" : "text-white/80 hover:text-white"
            }`}
          >
            {item.label}
          </a>
        ))}
      </nav>

      <div class="hidden md:block">
        <Button href={site.cta.primary.href}>{site.cta.primary.label}</Button>
      </div>

      <!-- Mobile -->
      <button
        id="navToggle"
        class="md:hidden inline-flex items-center justify-center rounded-xl border border-white/12 bg-white/5 px-3 py-2 text-sm text-white/90 hover:bg-white/10"
        aria-label="Open menu"
        aria-expanded="false"
      >
        Menu
      </button>
    </div>

    <div id="mobileNav" class="md:hidden hidden pt-4">
      <div class="rounded-2xl border border-white/10 bg-white/5 p-4">
        <div class="flex flex-col gap-3">
          {site.nav.map((item) => (
            <a
              href={item.href}
              class={`rounded-xl px-3 py-2 text-sm ${
                isActive(item.href) ? "bg-white/10 text-cyanBrand-500" : "text-white/85 hover:bg-white/10"
              }`}
            >
              {item.label}
            </a>
          ))}
          <div class="pt-2">
            <Button href={site.cta.primary.href} class="w-full">{site.cta.primary.label}</Button>
          </div>
        </div>
      </div>
    </div>

    <script is:inline>
      const toggle = document.getElementById("navToggle");
      const mobile = document.getElementById("mobileNav");
      toggle?.addEventListener("click", () => {
        const isHidden = mobile?.classList.contains("hidden");
        mobile?.classList.toggle("hidden", !isHidden);
        toggle?.setAttribute("aria-expanded", String(isHidden));
      });
    </script>
  </Container>
</header>
